<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_msg_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/msg_out_bubble"
        android:elevation="5dp"
        android:fontFamily="@font/mukta_vaani_extralight"
        android:maxWidth="240dp"
        android:maxLines="10"
        android:padding="15dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="my message" />

    <TextView
        android:id="@+id/tv_msg_out_time"
        android:text="12:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_msg_out"
        app:layout_constraintRight_toLeftOf="@+id/tv_msg_out" android:fontFamily="@font/rancho"/>

</android.support.constraint.ConstraintLayout>